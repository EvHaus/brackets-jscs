---
parser: babel-eslint

env:
  browser: true
  node: true
  jasmine: true

globals:
  __DEV__: true

ecmaFeatures:
  arrowFunctions: true
  destructuring: true
  jsx: true
  objectLiteralShorthandMethods: true
  spread: true

plugins:
  - react

rules:
  # ERRORS
  block-scoped-var: 2
  consistent-return: 2
  dot-notation: 2
  eqeqeq: 2
  indent: [2, "tab"]
  no-caller: 2
  no-comma-dangle: 2
  no-cond-assign: 2
  no-constant-condition: 2
  no-control-regex: 2
  no-debugger: 2
  no-div-regex: 2
  no-dupe-args: 2
  no-dupe-keys: 2
  no-else-return: 2
  # Pending release of: https://github.com/eslint/eslint/issues/2188
  no-empty: 0
  no-empty-class: 2
  no-empty-label: 2
  no-eval: 2
  no-extend-native: 2
  no-extra-bind: 2
  no-extra-semi: 2
  no-fallthrough: 2
  no-floating-decimal: 2
  no-func-assign: 2
  no-implied-eval: 2
  no-inner-declarations: 2
  no-invalid-regexp: 2
  no-irregular-whitespace: 2
  no-iterator: 2
  no-labels: 2
  no-lone-blocks: 2
  no-loop-func: 2
  no-multi-spaces: 2
  no-multi-str: 2
  no-native-reassign: 2
  no-negated-in-lhs: 2
  no-new: 2
  no-new-func: 2
  no-new-wrappers: 2
  no-octal: 2
  no-octal-escape: 2
  no-obj-calls: 2
  no-proto: 2
  no-redeclare: 2
  no-regex-spaces: 2
  no-reserved-keys: 2
  no-return-assign: 2
  no-script-url: 2
  no-self-compare: 2
  no-sequences: 2
  no-sparse-arrays: 2
  no-throw-literal: 2
  no-unreachable: 2
  no-unused-expressions: 2
  no-unused-vars: [2, args: none]
  no-void: 2
  no-with: 2
  radix: 2
  react/display-name: 2
  react/jsx-boolean-value: 2
  react/jsx-quotes: [2, "double", "avoid-escape"]
  react/jsx-no-undef: 2
  react/jsx-sort-props: 2
  react/jsx-sort-prop-types: 2
  react/jsx-uses-react: 2
  react/jsx-uses-vars: 2
  react/no-unknown-property: 2
  react/prop-types: [2, {"ignore": ["className", "children", "id", "onClick", "style"]}]
  react/react-in-jsx-scope: 2
  react/self-closing-comp: 2
  react/wrap-multilines: 2
  space-before-blocks: 2
  space-after-keywords: 2
  strict: 2
  use-isnan: 2
  valid-jsdoc: [2, {"requireReturn": false}]
  valid-typeof: 2
  yoda: 2
  wrap-iife: 2

  # WARNINGS
  complexity: 1
  guard-for-in: 1
  no-console: 1
  no-warning-comments: [1, {"terms": ["todo", "fixme", "future"], "location": "anywhere"}]
  react/no-did-mount-set-state: 1
  react/no-did-update-set-state: 1
  react/no-multi-comp: 1

  # DISABLED
  # Most of these are validated more finely via JSCS
  brace-style: 0
  camelcase: 0
  comma-spacing: 0
  consistent-return: 0
  curly: 0
  default-case: 0
  eol-last: 0
  key-spacing: 0
  new-cap: 0
  no-alert: 0
  no-eq-null: 0
  no-mixed-requires: 0
  no-param-reassign: 0
  no-shadow: 0
  no-underscore-dangle: 0
  no-use-before-define: 0
  quotes: 0
  vars-on-top: 0